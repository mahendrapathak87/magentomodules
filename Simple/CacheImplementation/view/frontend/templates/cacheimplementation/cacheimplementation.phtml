<?php 
$n=10; 
function getName($n) { 
    $characters = 'Mahendra'; 
    $randomString = ''; 
  
    for ($i = 0; $i < $n; $i++) { 
        $index = rand(0, strlen($characters) - 1); 
        $randomString .= $characters[$index]; 
    } 
  
    return $randomString; 
} 
  
$name = getName($n); 
?>
<div><?php echo $name ; ?></div>